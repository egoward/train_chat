    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js"
        },
        {
            "name": "Chat Client",
            "type": "edge",
            "request": "launch",
            "version": "beta",
            "url": "http://localhost:8080/chat.html",
            "webRoot": "${workspaceFolder}/public",

        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": ["Server", "Chat Client"]
        }
    ]    
}